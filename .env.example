# ============================================================================
# Tender Scraper Engine - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your settings
# DO NOT commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# SQLite (default for development and small deployments)
DATABASE_URL=sqlite:///data/tender_scraper.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/tender_scraper

# ----------------------------------------------------------------------------
# Scraper Configuration
# ----------------------------------------------------------------------------
# Base URL of the tender portal
BASE_URL=https://tender.telangana.gov.in

# Scraper mode: api, selenium, or hybrid
# - api: Fast, uses API endpoints (recommended)
# - selenium: Reliable, uses browser automation (fallback)
# - hybrid: Try API first, fallback to Selenium
SCRAPER_MODE=api

# Browser mode (for selenium)
# true = headless (no visible browser window)
# false = visible browser (for debugging)
HEADLESS=true

# Maximum number of retry attempts
MAX_RETRIES=3

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
# Delay between requests (seconds)
MIN_DELAY=2
MAX_DELAY=5

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=data/logs/scraper.log

# Log rotation (days)
LOG_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# AWS Configuration
# ----------------------------------------------------------------------------
# AWS region (Mumbai)
AWS_REGION=ap-south-1

# AWS credentials (optional - use IAM roles on EC2)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ----------------------------------------------------------------------------
# Email Notifications (Optional)
# ----------------------------------------------------------------------------
# Enable email notifications for failures
SEND_EMAIL=false

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Alert recipient email
# ALERT_EMAIL=alerts@yourcompany.com

# ----------------------------------------------------------------------------
# CloudWatch Integration (Optional)
# ----------------------------------------------------------------------------
# Enable CloudWatch logging and metrics
ENABLE_CLOUDWATCH=false

# CloudWatch log group name
# CLOUDWATCH_LOG_GROUP=/aws/tender-scraper

# ----------------------------------------------------------------------------
# Monitoring
# ----------------------------------------------------------------------------
# Health check HTTP port
HEALTH_CHECK_PORT=8000

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60

# ----------------------------------------------------------------------------
# Document Processing
# ----------------------------------------------------------------------------
# Maximum document download size (MB)
MAX_DOCUMENT_SIZE_MB=50

# Document download timeout (seconds)
DOCUMENT_TIMEOUT=120

# Supported document formats (comma-separated)
SUPPORTED_FORMATS=pdf,xlsx,xls,docx,doc

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
# Number of parallel workers for document processing
PARALLEL_WORKERS=4

# Batch size for database inserts
DB_BATCH_SIZE=100

# Cache TTL (seconds)
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
# Enable HTTPS verification
VERIFY_SSL=true

# User agent string
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ----------------------------------------------------------------------------
# Development/Debug Settings
# ----------------------------------------------------------------------------
# Enable debug mode (more verbose logging, no rate limiting)
DEBUG_MODE=false

# Save raw responses for debugging
SAVE_RAW_RESPONSES=false

# Test mode (limits number of items, doesn't commit to DB)
TEST_MODE=false

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
# Enable automatic database backups
AUTO_BACKUP=true

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup location
BACKUP_DIR=data/backups

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable document download
ENABLE_DOCUMENT_DOWNLOAD=true

# Enable document parsing
ENABLE_DOCUMENT_PARSING=true

# Enable field extraction
ENABLE_FIELD_EXTRACTION=true

# Enable duplicate detection
ENABLE_DUPLICATE_CHECK=true
